<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_iv"
        tools:src="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/sandwich_picture_content_description"
        android:scaleType="centerCrop" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_also_known_as_label"
        android:layout_below="@id/image_iv"
        android:paddingTop="12dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:id="@+id/also_known_lbl"
        />
    <TextView
        android:id="@+id/also_known_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/also_known_lbl"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_place_of_origin_label"
        android:textStyle="bold"
        android:layout_below="@id/also_known_tv"
        android:paddingTop="2dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:id="@+id/place_lbl"/>

    <TextView
        android:id="@+id/origin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/place_lbl"
        android:layout_below="@id/also_known_tv"
        android:paddingTop="2dp"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:layout_toRightOf="@id/place_lbl" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_ingredients_label"
        android:textStyle="bold"
        android:layout_below="@id/place_lbl"
        android:paddingTop="2dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:id="@+id/ingredients_lbl"/>

    <TextView
        android:id="@+id/ingredients_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingredients_lbl"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_description_label"
        android:textStyle="bold"
        android:paddingTop="2dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:layout_below="@id/ingredients_tv"
        android:id="@+id/description_lbl"/>


    <TextView
        android:id="@+id/description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:layout_below="@id/description_lbl"
        />


</RelativeLayout>
</ScrollView>
